<%- include('partials/header.ejs', { title: "NoteItDown - Home" }) %>
<section id="books">
    <div class="title-container">
        <div class="title-heading">
            <h1>My Book Collection ðŸ“š</h1>
        </div>
    </div>
    <div class="book-cards">
        <% books.forEach(function(book) { %>
        <div class="book-card">
            <img src="<%= book.imageurl %>" alt="<%= book.title %>">
            <div class="book-info">
                <h2><%= book.title %></h2>
                <p>Rating: <%= book.rating %>/10</p>
                <a href="/book/<%= book.id %>" class="view-details">View Details</a>
            </div>
        </div>
        <% }) %>
    </div>
</section>
