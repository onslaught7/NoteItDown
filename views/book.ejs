<%- include('partials/header.ejs', { title: "NoteItDown - Home" }) %>
<section id="book-details">
    <div class="book-header">
        <img src="<%= book.imageurl %>" alt="<%= books.title %>">
        <div class="book-meta">
            <h1><%= books.title %></h1>
            <p>Rating: <%= books.rating %>/10</p>
            <p><%= books.summary %></p>
        </div>
    </div>
    <div class="book-notes">
        <h2>Notes</h2>
        <ul>
            <% books.notes.forEach(function(note) { %>
            <li><%= note %></li>
            <% }) %>
        </ul>
    </div>
</section>
<%- include('partials/footer.ejs') %>
