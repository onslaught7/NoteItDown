<%- include('../partials/header', { title: "NoteItDown - Book Details" }) %>
<section id="book-details">
    <div class="book-header">
        <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
        <div class="book-meta">
            <h1><%= book.title %></h1>
            <p>Rating: <%= book.rating %>/10</p>
            <p>Finished on: <%= new Date(book.finishDate).toLocaleDateString() %></p>
            <p><%= book.summary %></p>
        </div>
    </div>
    <div class="book-notes">
        <h2>Notes</h2>
        <ul>
            <% book.notes.forEach(function(note) { %>
            <li><%= note %></li>
            <% }) %>
        </ul>
    </div>
</section>
<%- include('../partials/footer') %>
